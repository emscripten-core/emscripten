SubDir  FT2_TOP $(FT2_SRC_DIR) truetype ;

{
  local  _sources ;

  if $(FT2_MULTI)
  {
    _sources = ttdriver ttobjs ttpload ttgload ttinterp ttgxvar ttpic ;
  }
  else
  {
    _sources = truetype ;
  }

  Library  $(FT2_LIB) : $(_sources).c ;
}

# end of src/truetype Jamfile
