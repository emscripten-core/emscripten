SubDir  FT2_TOP $(FT2_SRC_DIR) otvalid ;

{
  local  _sources ;

  if $(FT2_MULTI)
  {
    _sources = otvbase otvcommn otvgdef otvgpos otvgsub otvjstf otvmod otvmath ;
  }
  else
  {
    _sources = otvalid ;
  }

  Library  $(FT2_LIB) : $(_sources).c ;
}

# end of src/otvalid Jamfile
