SubDir  FT2_TOP $(FT2_SRC_DIR) bdf ;

{
  local  _sources ;

  if $(FT2_MULTI)
  {
    _sources = bdfdrivr bdflib ;
  }
  else
  {
    _sources = bdf ;
  }

  Library  $(FT2_LIB) : $(_sources).c ;
}

# end of src/bdf Jamfile
